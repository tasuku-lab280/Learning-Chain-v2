<header class="navbar navbar-expand-lg fixed-top">
  <div class="container">
    <%= link_to "Learning Chain", root_path, id: "logo" %>
    <ul class="nav nav-pills">
      <% if logged_in? %>
        <li class="nav-item"><%= link_to "トップページへ", root_path, class: "nav-link" %></li>
        <li class="nav-item"><%= link_to "ユーザー一覧", users_path, class: "nav-link" %></li>
        <li class="nav-item"><%= link_to "マイページ", current_user, class: "nav-link" %></li>
        <li class="nav-item"><%= link_to "ユーザー編集", edit_user_path(current_user), class: "nav-link" %></li>
        <li class="nav-item"><%= link_to "勉強記録を投稿する", new_post_path, class: "nav-link" %></li>
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
            タグ
          </a>
          <div class="dropdown-menu">
            <% @tags.each do |tag| %>
              <a class="dropdown-item" href="/tags/<%= tag.id %>"><%= tag.name %></a>
            <% end %>
          </div>
        </li>
        <li class="nav-item"><%= link_to "ログアウト", logout_path, method: :delete, class: "nav-link" %></li>
      <% else %>
        <li class="nav-item"><%= link_to "トップページへ", root_path, class: "nav-link" %></li>
        <li class="nav-item"><%= link_to "ユーザー一覧", users_path, class: "nav-link" %></li>
        <li class="nav-item"><%= link_to "ログイン", login_path, class: "nav-link" %></li>
        <li class="nav-item"><%= link_to "新規登録", signup_path, class: "nav-link" %></li>
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
            タグ
          </a>
          <div class="dropdown-menu">
            <% @tags.each do |tag| %>
              <a class="dropdown-item" href="/tags/<%= tag.id %>"><%= tag.name %></a>
            <% end %>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</header>