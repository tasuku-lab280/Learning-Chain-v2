<header class="navbar navbar-fixed-top">
  <div class="container">
    <%= link_to "Learning Chain", root_path, id: "logo" %>
    <ul>
      <li><%= link_to "トップページへ", root_path %></li>
      <li><%= link_to "ユーザー一覧", users_path %></li>
      <% if logged_in? %>
        <li><%= link_to "マイページ", current_user %></li>
        <li><%= link_to "ユーザー編集", edit_user_path(current_user) %></li>
        <li><%= link_to "勉強記録を投稿する", new_post_path %></li>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            タグ <b class="caret"></b>
          </a>
          <ul class="dropdown-menu">
            <% @tags.each do |tag| %>
              <li><a href="/tags/<%= tag.id %>"><%= tag.name %></a></li>
            <% end %>
          </ul>
        </li>
        <li><%= link_to "ログアウト", logout_path, method: :delete %></li>
      <% else %>
        <li><%= link_to "ログイン", login_path %></li>
      <% end %>
    </ul>
  </div>
</header>