    <% end %>
    <span class="user ml-2"><%= link_to post.user.name, post.user %></span>
  </div>

  <div class="mt-2">
    <span class="material">ÊïôÊùêÔºö<%= post.material %></span>
  </div>

  <div class="tag-box">
    <% post.tags.each do |tag| %>
      <span class="badge badge-primary"><%= tag.name %></span>
    <% end %>
  </div>

  <div class="time-like">
    <div class="d-flex">
      <div class="mt-2">
        <%= link_to post_path(post.id) do %>
          <span class="mt-2 detail-text">Ë©≥Á¥∞„ÇíË¶ã„Çã</span>
        <% end %>
      </div>
