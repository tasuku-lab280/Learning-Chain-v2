<li class="mt-3 p-3" id="post-<%= post.id %>">

  <div>
    <span class="title font-weight-bold">
      <%= link_to post_path(post.id) do %>
        <%= post.title %>
      <% end %>
    </span>
  </div>

  <% unless post.clock_id.nil? %>
    <div class="badge badge-success clock-box">
      <span class="clock"><%= post.clock.name %></span>
    </div>
  <% end %>

  <div>
    <% if post.user.image.attached? %>
      <%= image_tag(post.user.image, :size => "35x35", :class => "top-icon", :alt => "„Ç¢„Ç§„Ç≥„É≥") %>
