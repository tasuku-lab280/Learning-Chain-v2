<div class="row">
  <div class="col-md-8">

    <%= search_form_for @q, url: user_path(@user), class: "mb-3" do |f| %>
      <div class="form-group row mb-0">
        <%= f.label :title_cont, 'タイトル検索', class: "col-sm-2 col-form-label" %>
        <div class="col-sm-10">
          <%= f.search_field :title_cont, class: "form-control mb-2" %>
          <%= f.submit class: "btn btn-outline-primary" %>
        </div>
      </div>
    <% end %>

    <% if @user.posts.any? %>
      <h3>Posts (<%= @user.posts.count %>)</h3>
      <ol class="posts p-0">
        <% @posts.each do |post| %>
          <%= render 'posts/post', post: post %>
        <% end %>
      </ol>
      <%= paginate @posts %>
      <%= page_entries_info @posts %>
    <% end %>
  </div>

  <div class="col-md-4">

    <section class="stats">
      <%= render 'shared/stats' %>
    </section>

    <% if @user.likes.any? %>
      <div class="like-posts">
        <h3>いいねした投稿</h3>
        <% @user.liked_posts.each do |post| %>
          <ul>
            <li>
              <%= link_to post_path(post.id) do %>
                <%= post.user.name %>:<%= post.title %>
              <% end %>
            </li>
          </ul>
        <% end %>
      </div>
    <% end %>

  </div>
</div>