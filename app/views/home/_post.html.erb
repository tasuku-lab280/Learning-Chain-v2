<li id="post-<%= post.id %>">
  <div class="parent">

    <div>
      <span class="title">
        <%= link_to post_path(post.id) do %>
          <%= post.title %>
        <% end %>
      </span>
    </div>

    <div>
      <% if post.user.image.attached? %>
        <%= image_tag(post.user.image, :size => "35x35", :class => "top-icon", :alt => "„Ç¢„Ç§„Ç≥„É≥") %>
      <% else %>
        <%= image_tag("cat-default.jpg", :size => "35x35", :class => "top-icon", :alt => "„Ç¢„Ç§„Ç≥„É≥") %>
      <% end %>
      <span class="user"><%= link_to post.user.name, post.user %></span>
    </div>

    <div class="material-box">
      <span class="material">ÊïôÊùêÔºö<%= post.material %></span>
    </div>
    <div>
      <% post.tags.each do |tag| %>
        <span class="label label-primary"><%= tag.name %></span>
      <% end %>
    </div>

    <div class="time-like">
      <div class="like-position">
        <% if logged_in? %>
          <div id="like_form_<%= post.id %>">
            <% if post.liked_by?(current_user) %>
              <p>
                <%= link_to "üíì", "/posts/#{post.id}/likes/destroy", method: :delete, remote: true %>
                <strong><%= post.likes.count %></strong>
              </p>
            <% else %>
              <p>
                <%= link_to "üíì", "/posts/#{post.id}/likes", method: :post, remote: true %>
                <strong><%= post.likes.count %></strong>
              </p>
            <% end %>
          </div>
        <% else %>
          <div id="like_form_<%= post.id %>">
            üíì
            <strong><%= post.likes.count %></strong>
          </div>
        <% end %>
      </div>

      Posted <%= time_ago_in_words(post.created_at) %> ago.
      <% if current_user?(post.user) %>
        <%= link_to "delete", post, method: :delete,
                                        data: { confirm: "You sure?" } %>
      <% end %>
    </div>

  </div>
</li>